// German symbols (windows)
ZMK_MACRO(a_um, bindings = <&macro_press &kp LALT>, <&macro_tap &kp KP_N1 &kp KP_N3 &kp KP_N2>, <&macro_release &kp LALT>;)
ZMK_MACRO(o_um, bindings = <&macro_press &kp LALT>, <&macro_tap &kp KP_N1 &kp KP_N4 &kp KP_N8>, <&macro_release &kp LALT>;)
ZMK_MACRO(u_um, bindings = <&macro_press &kp LALT>, <&macro_tap &kp KP_N1 &kp KP_N2 &kp KP_N9>, <&macro_release &kp LALT>;)
ZMK_MACRO(ss, bindings = <&macro_press &kp LALT>, <&macro_tap &kp KP_N2 &kp KP_N2 &kp KP_N5>, <&macro_release &kp LALT>;)

ZMK_MACRO(a_upper_umlaut, bindings = <&macro_press &kp LALT>, <&macro_tap &kp KP_N1 &kp KP_N4 &kp KP_N2>, <&macro_release &kp LALT>;)
