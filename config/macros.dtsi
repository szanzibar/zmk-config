ZMK_MACRO(elixir_pipe, bindings = <&kp PIPE &kp GREATER_THAN>;)
ZMK_MACRO(l_dash_arrow, bindings = <&kp LESS_THAN &kp MINUS>;)
ZMK_MACRO(r_dash_arrow, bindings = <&kp MINUS &kp GREATER_THAN>;)
ZMK_MACRO(l_equals_arrow, bindings = <&kp LESS_THAN &kp EQUAL>;)\
